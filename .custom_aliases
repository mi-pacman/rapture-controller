# Terraform Controller
alias poweron-tc='sudo docker run --name terraform_controller -h terraform-controller -d -p 2222:22 pacman369/rapture:terraform-controller'
alias connect-tc='ssh -p 2222 pacman@terraform-controller'
alias poweroff-tc='sudo docker stop terraform_controller && sudo docker rm terraform_controller'

# Packer Controller
alias poweron-pc='sudo docker run --name packer_controller -h packer-controller -d -p 2223:22 pacman369/rapture:packer-controller'
alias connect-pc='ssh -p 2223 pacman@packer-controller'
alias poweroff-pc='sudo docker stop packer_controller && sudo docker rm terraform_controller'
